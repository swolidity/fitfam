datasource db {
  provider = "mysql"
  url = "***"
}

generator photon {
  provider = "photonjs"
}

model User {
  id        String    @default(cuid()) @id @unique
  email     String    @unique
  name      String
  username  String    @unique
  picture   String
  workouts  Workout[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Workout {
  id        String       @default(cuid()) @id @unique
  title     String
  user      User
  logs      WorkoutLog[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model WorkoutLog {
  id        String   @default(cuid()) @id @unique
  exercise  Exercise
  reps      Int
  weight    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id        String   @default(cuid()) @id @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bodyweight {
  id        String   @default(cuid()) @id @unique
  weight    Float
  user      User
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}